*{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
	font-family: 'Open Sans', sans-serif;
}
.header{
    padding: 25px 0 0px;
}
.container{
    width: 1150px;
    margin: 0 auto;
}
.navbar li{
    display: inline-block;
    /* margin: 0 10px; */
}
.navbar li a{
    padding:10px;
    color: #006a4d;
    font-size: 18px;
    position: relative;
}
.navbar li a::after{
    content: '';
    width: 0;
    height: 3px;
    position: absolute;
    background-color: #69be28;
    left: 0;
    bottom: 0;  
    cursor: pointer;
    transition: all 0.5s ease-in-out; 
}
.navbar li a:hover::after{
    width: 100%;
}
.search li{
	color:#69be28;
	
}
.search li a:hover{
	background-color: #fff;
	color:#69be28;
}
.navbar li a.active{
    color: #69be28;
}
.search a{
    color: #fff;
    font-size: 18px;
    padding: 15px 10px;
    background-color: #69be28;
    /* border-radius: 15%; */
    cursor: pointer;
}

.heroimage{
    height: 100vh;
    background-image: url(../images/background.png);
    object-fit: cover;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
}
.heroimage{
    position: relative;
}
.captain{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
} 
.captain h1{
    color: #fff;
    font-size: 35px;
    font-weight: bold;
    margin-bottom: 25px;
    text-align: center;
}
.captain h2{
    color: #fff;
    font-size: 52px;
    font-weight: bold;
    margin-bottom: 25px;
	border:0;
	border-bottom:1px solid #fff;
	width:100%;
	padding:20px;
}
